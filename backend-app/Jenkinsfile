pipeline {
    agent {
        label 'build-agent' // Running the pipeline on the build-agent node
    }

    tools {
        nodejs 'NodeJS 16' // Using NodeJS 16 tool
    }

    environment {
        MONGO_URI = credentials('MONGO_URI') // MongoDB URI from Jenkins credentials
        JWT_SECRET = credentials('JWT_SECRET') // JWT secret from Jenkins credentials
        PORT = '3000' // Application port
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Cloning the repository from GitHub
                git branch: 'main', url: 'https://github.com/Bamidele0102/nodecraft.git'
            }
        }

        stage('Navigate to Backend Directory') {
            steps {
                dir('backend-app') {
                    // Navigating to backend-app directory
                    echo 'Navigated to backend-app directory'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend-app') {
                    script {
                        // Update npm to a compatible version
                        sh 'npm install -g npm@8.19.4'

                        // Setting npm registry and fetch timeout
                        sh 'npm config set registry https://registry.npmjs.org/'
                        sh 'npm config set fetch-timeout 60000'
                        echo 'Starting npm install...'
                        
                        // Retrying npm install up to 3 times with a timeout of 20 min
                        retry(3) {
                            timeout(time: 20, unit: 'MINUTES') {
                                sh 'npm install --only=production'
                            }
                        }
                        
                        // Verifying node_modules installation
                        echo 'Verifying node_modules installation...'
                        sh 'ls -la node_modules || echo "node_modules not found"'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('backend-app') {
                    script {
                        // Calculating Docker image version based on build number
                        def majorVersion = (env.BUILD_NUMBER.toInteger() / 10).toInteger() + 1
                        def minorVersion = env.BUILD_NUMBER.toInteger() % 10
                        env.IMAGE_VERSION = "v${majorVersion}.${minorVersion}"
                        
                        // Building Docker image
                        dockerImage = docker.build("bamidele0102/backend-app:${env.IMAGE_VERSION}")
                    }
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    // Pushing Docker image to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        dockerImage.push(env.IMAGE_VERSION)
                    }
                }
            }
        }

        stage('Deploy to Production Server') {
            steps {
                // Deploying Docker image to production server using SSH
                sshagent(credentials: ['your-ssh-credentials-id']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ubuntu@100.25.28.252 << EOF
                    docker pull bamidele0102/backend-app:${env.IMAGE_VERSION}
                    docker stop backend-app || true
                    docker rm backend-app || true
                    docker run -d --name backend-app -p 3000:3000 --env-file .env bamidele0102/backend-app:${env.IMAGE_VERSION}
                    EOF
                    """
                }
            }
        }
    }

    post {
        success {
            // Sending email notification on success
            emailext (
                subject: "SUCCESS: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                Good news! The build succeeded.
                - Job: ${env.JOB_NAME}
                - Build Number: ${env.BUILD_NUMBER}
                - Build URL: ${env.BUILD_URL}
                """,
                to: "idowu.olayiwola.bamidele@gmail.com,victorgavon@gmail.com"
            )
        }

        failure {
            // Sending email notification on failure
            emailext (
                subject: "FAILURE: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                Unfortunately, the build failed.
                - Job: ${env.JOB_NAME}
                - Build Number: ${env.BUILD_NUMBER}
                - Build URL: ${env.BUILD_URL}
                """,
                to: "idowu.olayiwola.bamidele@gmail.com,victorgavon@gmail.com"
            )
        }
    }
}

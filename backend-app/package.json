{
  "name": "backend-app",
  "version": "1.0.0",
  "description": "A backend API built with Node.js, MongoDB, Docker, and CI/CD pipeline using Jenkins.",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha --timeout 20000 'tests/**/*.test.mjs' 'tests/**/*.test.js'",
    "test:unit": "mocha --timeout 20000 'tests/unit/**/*.test.js'",
    "test:integration": "mocha --timeout 20000 'tests/integration/**/*.test.mjs'",
    "coverage": "nyc mocha",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:report": "mocha --reporter mocha-junit-reporter --reporter-options mochaFile=./test-results/results.xml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bamidele0102/nodecraft/backend-app.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "docker",
    "jenkins",
    "ci/cd",
    "api",
    "backend"
  ],
  "author": "Idowu Olayiwola Bamidele",
  "license": "Apache-2.0",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "chai-http": "^5.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.30.0",
    "mocha": "^10.7.3",
    "mocha-junit-reporter": "^2.2.1",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^19.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
